<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfApp1.UserControls"
        mc:Ignorable="d"
        Background="Black"
        Title="MainWindow" Height="500" Width="800">

    <Grid>
        <uc:CarouselUC
            CarouselButtons="{Binding CarouselViewModel.CarouselButtons}"
            CarouselWidth="500" 
            CarouselHeight="80"
            CarouselTop="20"
            CarouselLeft="20"
            CarouselButtonCornerRadius="5"
            CarouselButtonWidth="40"
            CarouselButtonHeight="40"
            CarouselButtonBackground="WhiteSmoke"
            CarouselButtonBorderBrush="DarkGray"
            CarouselButtonMouseOverBackground="Green"
            CarouselButtonIsPressedBackground="Orange"
            CarouselButtonIconBackground="Transparent"
            CarouselButtonIconForeground="DarkGoldenrod"
            CarouselReflectionOffset="40"
            CarouselReflectionGradientStart="Black"
            CarouselReflectionGradientEnd="Transparent"
            CarouselReflectionOpacity=".25"
            CarouselButtonTextForeground="White"/>
    </Grid>
</Window>
